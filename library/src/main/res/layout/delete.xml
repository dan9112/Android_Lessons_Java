<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".DeleteActivity">

    <ScrollView
        android:layout_above="@+id/dDel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/bIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#55336699">

                <TextView
                    android:id="@+id/sortChecked"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onClick"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>

                <TextView
                    android:id="@+id/sortName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название"
                    android:textColor="@color/black"
                    android:onClick="onClick"/>

                <TextView
                    android:id="@+id/sortAutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Автор"
                    android:textColor="@color/black"
                    android:onClick="onClick"/>

                <TextView
                    android:id="@+id/sortSeria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Серия"
                    android:textColor="@color/black"
                    android:onClick="onClick"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Номер в серии"
                    android:textColor="@color/black"
                    android:onClick="onClick"/>

                <TextView
                    android:id="@+id/sortRead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статус"
                    android:textColor="@color/black"
                    android:onClick="onClick"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/dDel"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Удалить выбранные" />
</RelativeLayout>